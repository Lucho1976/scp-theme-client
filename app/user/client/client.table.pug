extends /resources/pug/table

block headings
  th.sortable(ng-if="table.showName")
    span(translate="user.client.heading.NAME")
    sort(col="last")
  th.sortable(ng-if="table.showEmail")
    span(translate="user.client.heading.EMAIL")
    sort(col="email")
  th(
    ng-if="table.showServerCount"
    translate="user.client.heading.SERVER-COUNT"
  )

block columns
  td(
    ng-if="table.showName"
    ng-bind="row.name"
  )
  td(
    ng-if="table.showEmail"
    ng-bind="row.email"
  )
  td(
    ng-if="table.showServerCount"
  )
    span(
      ng-if="!row.serversCount"
      translate="user.client.list.NO-SERVERS"
    )
    a(
      ui-sref="app.hardware.server.list({ client: row.id })"
      ng-bind="row.serversCount"
      ng-if="row.serversCount"
    )
