extends /resources/angle/pug/list-page
include /resources/angle/pug/mixins/list

block list
  .ng-slideInOut(ng-show="vm.list.loader.active && angular.empty(vm.filters.current)")
    .text-center.panel-body
      .ball-clip-rotate.inline-block.enlarged
        div
  .alert.alert-info(
    ng-if="!vm.list.items.length && !vm.list.loader.active && angular.empty(vm.filters.current)"
    translate="user.client.list.EMPTY"
  )
  .ng-fadeInUp(ng-show="vm.list.items.length || !angular.empty(vm.filters.current)")
    list.panel.panel-default(
      list="vm.list"
      hide-loader="true"
    )
      list-header(text="client.list.TITLE")
        a.btn.btn-default(ng-click="vm.filters.visible = !vm.filters.visible")
          i.fa.fa-filter
      client-filters(
        show="vm.filters.visible"
        current="vm.filters.current"
        change="vm.filters.change()"
      )
      client-table.border-top-table
      list-footer

block bottom-left
  +create-form("{{ 'user.client.form.title.ADD' | translate }}")
    client-form(form="vm.create")
