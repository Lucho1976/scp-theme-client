doctype html
include /resources/angle/pug/mixins/form

+field(
  "{{ 'client.form.email.LABEL' | translate }}",
  "email"
)(
  ng-model="clientForm.input.email"
)

+double-field(
  "{{ 'client.form.name.LABEL' | translate }}",
  "name", {
    "ng-model": "clientForm.input.first"
  }, {
    "ng-model": "clientForm.input.last"
  }
)
